// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId             Int       @id
  email          String    @unique
  hashPassword   String
  bio            String?
  profilePicture String?
  searching      Boolean   @default(false)
  user           Tag[]
  longitude      Float     @default(0)
  latitude       Float     @default(0)
  gender         string 
  meetup         Meetup[]
  Message        Message[]
}

model Tag {
  tagId         Int    @id
  name       String @unique
  numberUsed Int    @default(0)
  users      User[]
}

model Chat {
  chatId       Int       @id
  users    User[]
  messages Message[]
  name     String
}

model Message {
  messageId         Int      @id
  message    String
  timeStamp  DateTime
  fromUser   User     @relation(fields: [fromUserId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fromUserId String
  Meetup     Meetup   @relation(fields: [meetupId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  meetupId   String
}

model MMQueueElement {
  userId              Int @id 
  user                User     @relation(fields: [userId], references: [id])
  activities          String[] // Assuming activities are stored as a comma-separated list
  preferenceGender    String   // "male", "female", "both"
  preferenceMaxRadius Float
  preferenceMinPeople Int
}
