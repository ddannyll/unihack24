// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id
  email          String    @unique
  hashPassword   String
  bio            String?
  profilePicture String?
  searching      Boolean   @default(false)
  user           Tag[]
  longitude      Float     @default(0)
  latitude       Float     @default(0)
  meetup         Meetup[]
  Message        Message[]
}

model Tag {
  id         String @id
  name       String @unique
  numberUsed Int    @default(0)
  users      User[]
}

model Meetup {
  id       String    @id
  users    User[]
  messages Message[]
  name     String
}

model Message {
  id         String   @id
  message    String
  timeStamp  DateTime
  fromUser   User     @relation(fields: [fromUserId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fromUserId String
  Meetup     Meetup   @relation(fields: [meetupId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  meetupId   String
}
