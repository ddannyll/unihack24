generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  userId         String           @id
  email          String           @unique
  hashPassword   String
  bio            String?
  profilePicture String?
  searching      Boolean          @default(false)
  tags           Tag[]
  longitude      Float            @default(0)
  latitude       Float            @default(0)
  gender         String
  meetups        Meetup[]
  message        Message[]
  MMQueueElement MMQueueElement[]
}

model Tag {
  tagId      String @id
  name       String @unique
  numberUsed Int    @default(0)
  users      User[]
}

model Meetup {
  meetupId String    @id
  users    User[]
  messages Message[]
  name     String
}

model Message {
  messageId  String   @id
  message    String
  timeStamp  DateTime
  fromUser   User     @relation(fields: [fromUserId], references: [userId], onDelete: Cascade, onUpdate: Cascade)
  fromUserId String
  meetup     Meetup[]
}

model MMQueueElement {
  MMQueueElementId    String   @id @default(uuid()) // For UUID generation
  userId              String   
  user                User     @relation(fields: [userId], references: [userId])
  activities          String
  preferenceGender    String
  preferenceMaxRadius Float
  preferenceMinPeople Int 
}
